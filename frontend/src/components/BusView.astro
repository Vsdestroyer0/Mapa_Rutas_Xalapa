---
import { CldImage } from "astro-cloudinary";
const { src, alt = "Autobús" } = Astro.props;
---

<div class="p-4 bg-white rounded-lg shadow-md mb-4 flex flex-col items-center">
  <h4 class="text-lg font-semibold mb-2 text-gray-800">Vista del autobús</h4>
  <CldImage
    src={src}
    alt={alt}
    class="w-full max-w-xs sm:max-w-sm md:max-w-md lg:max-w-lg h-auto max-h-[500px] rounded-md shadow-sm object-contain"
  />
</div>
