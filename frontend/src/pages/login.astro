---
import MainLayout from "../layouts/mainLayout.astro";
---

<MainLayout title="Iniciar sesi칩n | MiRutaXalapa">
  <div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow">
    <h2 class="text-2xl font-bold mb-4">Iniciar sesi칩n</h2>
    <form id="loginForm" class="space-y-4">
      <input
        type="text"
        name="username"
        placeholder="Usuario"
        required
        class="w-full border rounded-md p-2"
      />
      <input
        type="password"
        name="password"
        placeholder="Contrase침a"
        required
        class="w-full border rounded-md p-2"
      />
      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded-md">Entrar</button
      >
    </form>
    <p id="loginMessage" class="mt-2 text-red-500"></p>
  </div>
</MainLayout>

<script type="module">
  const msg = document.getElementById("loginMessage");
  const form = document.getElementById("loginForm");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = {
      username: formData.get("username"),
      password: formData.get("password"),
    }; //data es un objeto javascript no json

    try {
      const res = await fetch("/api/login", {
        method: "POST", //indica envio de datos por post
        headers: { "Content-Type": "application/json" }, //indica que se envia un json
        credentials: "include", //permitir el envio de cookies
        body: JSON.stringify(data), //convierte data a string json
      });
      //res(es un obj Response) es la respuesta del servidor y contiene status, headers,ok,statusText y body(meta datos, stream de bytes)
      const json = await res.json(); //convierte el stream de bytes a json

      if (json.success) {
        /*   // Guardar sesi칩n en localStorage
        localStorage.setItem(
          "user",
          JSON.stringify({
            username: json.username,
            role: json.role,
          })
        ); */

        msg.textContent = "";
        window.location.href = "/"; //de regreso al index
      } else {
        msg.textContent = json.message;
      }
    } catch (err) {
      msg.textContent = "Error al conectar con el servidor";
      console.error(err);
    }
  });
</script>
