---
export const prerender = false; // SSR
import MainLayout from "../layouts/mainLayout.astro";

const baseURL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
---

<MainLayout title="Iniciar sesión | MiRutaXalapa">
  <div class="flex items-center justify-center min-h-[80vh] py-8">
    <div class="max-w-md w-full bg-white p-6 rounded-lg shadow">
      <h2 class="text-2xl font-bold mb-4">Iniciar sesión</h2>
      <form id="loginForm" data-base-url={baseURL} class="space-y-4">
        <input
          type="text"
          name="username"
          placeholder="Usuario"
          required
          class="w-full border rounded-md p-2"
        />
        <input
          type="password"
          name="password"
          placeholder="Contraseña"
          required
          class="w-full border rounded-md p-2"
        />
        <button
          type="submit"
          class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition"
        >
          Entrar
        </button>
      </form>
      <p id="loginMessage" class="mt-2 text-red-500"></p>
    </div>
  </div>
</MainLayout>

<script type="module">
  const form = document.getElementById("loginForm");
  const msg = document.getElementById("loginMessage");
  const baseURL = form.dataset.baseUrl; // URL pasada desde SSR

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const data = {
      username: form.username.value,
      password: form.password.value,
    };

    try {
      const res = await fetch(`${baseURL}/api/login`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include", // enviar cookies cross-site
        body: JSON.stringify(data),
      });

      const json = await res.json();

      if (json.success) {
        localStorage.setItem(
          "user",
          JSON.stringify({ username: json.username, role: json.role })
        );
        msg.textContent = "";
        window.location.href = "/";
      } else {
        msg.textContent = "❌ " + (json.message || "Error de login");
      }
    } catch (err) {
      msg.textContent = "Error al conectar con el servidor";
      console.error(err);
    }
  });
</script>
