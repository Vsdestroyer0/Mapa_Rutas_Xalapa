---
export const prerender = false; // SSR
import MainLayout from "../layouts/mainLayout.astro";

const baseURL = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
---

<MainLayout title="Registro | MiRutaXalapa">
  <div class="flex items-center justify-center min-h-[80vh] py-8">
    <div class="max-w-md w-full bg-white p-6 rounded-lg shadow">
      <h2 class="text-2xl font-bold mb-4">Registrarse</h2>
      <form id="signupForm" data-base-url={baseURL} class="space-y-4">
        <input
          type="text"
          name="username"
          placeholder="Usuario"
          required
          class="w-full border rounded-md p-2"
        />
        <input
          type="password"
          name="password"
          placeholder="Contraseña"
          required
          class="w-full border rounded-md p-2"
        />
        <button
          type="submit"
          class="w-full bg-green-600 text-white py-2 rounded-md cursor-pointer hover:bg-green-700 transition"
        >
          Registrarse
        </button>
      </form>
      <p id="signupMessage" class="mt-2 text-red-500"></p>
    </div>
  </div>
</MainLayout>

<script type="module">
  const form = document.getElementById("signupForm");
  const msg = document.getElementById("signupMessage");
  const baseURL = form.dataset.baseUrl; // URL pasada desde SSR

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    const data = {
      username: form.username.value,
      password: form.password.value,
    };

    try {
      const res = await fetch(`${baseURL}/api/signup`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify(data),
      });

      const json = await res.json();

      if (json.success) {
        msg.textContent = "";
        alert("✅ Usuario registrado con éxito");
        form.reset();
      } else {
        msg.textContent = "❌ " + (json.message || json.error);
      }
    } catch (err) {
      msg.textContent = "Error de conexión con el servidor";
      console.error(err);
    }
  });
</script>
